<div class="row">
  <div class="large-9 push-3 columns">
    <div class="product featured panel">
      <div class="row">
        <div class="prdouct featured info large-6 columns">
          <div class="product featured title">
            <h2><%= @product.title %></h2>
          </div>
          <div class="product featured rating">
            <h5>Editors Rating: <%= @product.rating %></h5>
          </div>
          <div class="product featured price">
            <h6>Price: <%= @product.price %> $</h6>
          </div>
        </div><%# Ends Info block %> 
        <div class="product featured image large-4 columns">
          <%= image_tag( @product.image_url) %>
        </div>
      </div><%# Ends Row %>
      <div class="product featured description">
        <p><%= @product.description %></p>
      </div>
    </div><%# Ends Panel %>
  </div><%# Ends Featured Block %>
  <div class="large-3 columns pull-9">
    <ul class="side-nav products">
      <% @products.each do |p| %>
        <li class="product<%= p.id == @product.id ? " active" : ""%>"><%= link_to p.title, p %></li>
      <% end %>
    </ul>
  </div>
  </div>
