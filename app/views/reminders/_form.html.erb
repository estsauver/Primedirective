<div class="row">
  <div class="large-12 columns">
  <%= form_for :reminder, url: reminders_path do |f|%>
    <div class="large-2 columns">
      <%= f.label :event, "Event", class: "inline" %>
    </div>
    <div class="large-4 columns">
      <%= f.text_field :event, placeholder: "Mother's Day", class: "inline"%>
    </div>
    <div class="large-3 columns">
      <%= f.date_field :date, :class => "inline", :placeholder => "05/11/2014" %>
    </div>
    <%= f.hidden_field :product_id, :value => @product.id %>

    <div class="large-3 columns">
      <%= f.submit "Add Reminder", class: "button prefix inline" %>
    </div>
  <% end %>
  </div>
</div>
