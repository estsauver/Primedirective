<div class="row">
  <div class="large-12 columns">
  <%= form_for :reminder, url: reminders_path do |f|%>
    <div class="large-3 columns">
      <%= f.label :date, "Event Date", class: "inline" %>
    </div>
    <div class="large-6 columns">
      <%= f.text_field :date, :placeholder => "We'll remind you about a week in advance.", :class => "inline"%>
    <%= f.hidden_field :product_id, :value => @product.id %>
    </div>

    <div class="large-3 columns">
      <%= f.submit "Add Reminder", class: "button prefix" %>
    </div>
  <% end %>
  </div>
</div>
