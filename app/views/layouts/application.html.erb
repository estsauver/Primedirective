<!DOCTYPE html>
<html>
<head>
  <title>Prime Directive</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <meta name="viewport" content="width=device-width">
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="row">
      <div class="large-12 columns">
        <div id="logo">
          <%= link_to root_path do %>
            <h1>Prime Directive</h1>
          <% end %>
        </div>
        <% flash.each do |key, value| %>
          <div class="alert-box">
            <div class="flash <%= key %>"><%= value %></div>
            <a href="" class="close">&times;</a>
          </div>
        <% end %>
      </div>
    </div>
  </header>
  <%= yield %>
  <%= render "newsletter_requests/newsletter_request" %>
  <div class="row footer">
    <a href="http://www.viglink.com/legal/disclosures/users?vgtag=badge">
        <img alt="VigLink badge" height="31" src="//www.viglink.com/images/badges/88x31.png" title="Links monetized by VigLink" width="88" />
      </a>
    </div>
</body>
</html>
